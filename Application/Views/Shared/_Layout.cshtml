@{
  @* const string appTitle = "LayoutViewsExample"; *@
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body
    class="flex flex-col justify-between items-center gap-2 w-screen min-h-screen bg-white/20 relative"
  >
    <nav
      class="flex justify-between items-center py-6 px-8 shadow-xl shadow-blue-200/20 fixed top-0 min-w-full backdrop-blur-md z-50"
    >
      <div class="flex justify-evenly items-center gap-6 text-black text-xl">
        <p class="font-bold">Logo</p>
        <a
          href="/"
          class="no-underline text-blue-300 hover:text-blue-600 hover:-translate-y-1 transition duration-300 ease-in-out"
          >Home</a
        >
        <a
          href="/about"
          class="no-underline text-blue-300 hover:text-blue-600 hover:-translate-y-1 transition duration-300 ease-in-out"
          >About</a
        >
        <a
          href="/contact"
          class="no-underline text-blue-300 hover:text-blue-600 hover:-translate-y-1 transition duration-300 ease-in-out"
          >Contact</a
        >
        <a
          href="/"
          class="no-underline text-blue-300 hover:text-blue-600 hover:-translate-y-1 transition duration-300 ease-in-out"
          >Something</a
        >
      </div>
      <div class="flex justify-evenly items-center gap-6 text-black text-xl">
        <a
          href="/"
          class="no-underline text-blue-300 hover:text-blue-600 hover:-translate-y-1 transition duration-300 ease-in-out"
          >Theme Mode</a
        >
        <a
          href="/"
          class="no-underline text-blue-300 hover:text-blue-600 hover:-translate-y-1 transition duration-300 ease-in-out"
          >Settings</a
        >
        <a
          href="/about"
          class="no-underline text-blue-300 hover:text-blue-600 hover:-translate-y-1 transition duration-300 ease-in-out"
          >Profile</a
        >
      </div>
    </nav>
    <div class="px-16 py-8 flex flex-col gap-12 min-h-full w-full mt-20">
    @RenderBody()
    </div>
  @* <div class="p-12 min-w-full flex flex-wrap justify-evenly items-center
    gap-8" > @RenderSection("optional", false) </div> *@
    <footer
      class="flex justify-evenly items-center py-8 px-12 border-t-2 border-blue-200/20 min-w-full"
    >
    @for (int i = 0; i < 4; ++i)
    {
        <div
          class="flex flex-col justify-evenly items-center gap-6 text-black text-xl"
        >
        @for (int j = 0; j < 4; ++j)
        {
            <a
              href="/"
              class="no-underline text-blue-300 hover:text-blue-600 hover:-translate-y-1 transition duration-300 ease-in-out"
              class="font-bold"
              >Footer El @(j + 1)</a
            >
        }
        </div>
    }
    </footer>
  @RenderSection("scripts", required: false)
  </body>
</html>


