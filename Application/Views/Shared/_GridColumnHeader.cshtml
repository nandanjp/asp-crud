
<th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800">
    @if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.ASCENDING)
    {
        <a href="~/persons/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(SortOrderOptions.DESCENDING)">@ViewBag.DisplayName</a> 
    }
    else if(ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.DESCENDING)
    {
        <a href="~/persons/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(SortOrderOptions.ASCENDING)">@ViewBag.DisplayName</a>
    }
    else
    {
        <a href="~/persons/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(ViewBag.CurrentSortOrder)">@ViewBag.DisplayName</a>
    }
</th>